---
import contact from "@data/contact.json";
import { Picture } from "astro-imagetools/components";
import { Icon } from "astro-icon";
---

<div class="flex flex-col w-full bg-white rounded-xl overflow-hidden">
  <div class="h-8 bg-[#1C2F56] w-full"></div>
  <div class="flex-1 grid md:grid-cols-2">
    <div class="w-3/4 mx-auto h-full flex items-center my-2">
      <Picture src="/images/ChatChat.png" alt="logo" layout="contain" />
    </div>
    <div class="my-4 flex flex-col">
      <div class="flex">
        <div class="h-0 md:h-full md:w-6"></div>
        <div class="h-6 flex-1 bg-teal-500"></div>
      </div>
      <div class="flex-1 p-8 bg-[#1C2F56]">
        <ul class="text-white space-y-2">
          <li class="flex items-center space-x-2">
            <span class="flex-shrink-0">
              <Icon class="w-6 h-6" name="mdi:telephone-outline" />
            </span>
            <span>{contact.telephone}</span>
          </li>
          <li class="flex items-center space-x-2">
            <span class="flex-shrink-0">
              <Icon class="w-6 h-6" name="ic:outline-alternate-email" />
            </span>
            <span>{contact.email}</span>
          </li>
          <li class="flex items-center space-x-2">
            <span class="flex-shrink-0">
              <Icon class="w-6 h-6" name="mdi:address-marker-outline" />
            </span>
            <span>
              {contact.address}
            </span>
          </li>
        </ul>
      </div>
      <div class="flex">
        <div class="h-0 md:h-6 md:w-6"></div>
        <div class="h-6 flex-1 bg-teal-500"></div>
      </div>
    </div>
  </div>
  <div class="h-8 bg-[#1C2F56] w-full"></div>
</div>

<style is:global>
  .triangle {
    clip-path: polygon(100% 0, 100% 100%, 0 100%);
  }
</style>
