---
import { utilRemoveSpaces } from "@helpers/commonUtils";

interface Props {
  sectionTitle?: string;
  id?: string;
}

const { sectionTitle, id } = Astro.props as Props;
---

<section
  id={id ? id : utilRemoveSpaces(sectionTitle ? sectionTitle : "")}
  class="py-4 md:py-8"
>
  <div class="container mx-auto px-4 lg:px-8">
    {
      sectionTitle ? (
        <header class="flex items-center space-x-4 px-4 mb-4 md:mb-8">
          <div class="rounded-full h-1 bg-tertiary w-8 md:w-12 lg:w-16" />
          <h2 class="text-2xl text-primary capitalize md:text-3xl">
            {sectionTitle}
          </h2>
        </header>
      ) : null
    }
    <slot />
  </div>
</section>
