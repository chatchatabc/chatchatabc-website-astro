---
interface Props {
  sectionTitle?: string;
}

const { sectionTitle } = Astro.props as Props;
---

<section id={sectionTitle ?? ""} class="py-2 md:py-8">
  <div class="container mx-auto lg:px-8">
    {
      sectionTitle ? (
        <div class="flex items-center gap-4 px-8 mb-8">
          <div class="rounded-full h-1 bg-[#6750A4] w-16" />
          <h2 class="text-2xl capitalize">{sectionTitle}</h2>
        </div>
      ) : null
    }
    <div>
      <slot />
    </div>
  </div>
</section>
