---
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
import { Picture } from "astro-imagetools/components";
import OutSourcing from "../components/OutSourcing";
import Modal from "../components/Modal.astro";

const positions = [
  "java developer",
  "web developer",
  "backend engineer",
  "designer",
];
---

<Layout title="ChatChatABC">
  <!-- Modal -->
  <Modal />

  <!-- Hero Section -->
  <Section>
    <div class="relative grid grid-cols-2">
      <!-- Background -->
      <div class="absolute top-0 left-0 h-full w-full scale-125">
        <img src="/images/tailwind.png" class="h-full w-full object-contain" />
      </div>

      <!-- Left Side -->
      <ul
        class="pt-28 relative flex flex-col-reverse justify-center items-center gap-2 -rotate-[30deg] scale-105"
      >
        {
          positions.reverse().map((position) => {
            return (
              <li class="bg-[#6750A4] py-8 -mt-28 duration-1000 text-white shadow-2xl flex h-48 items-end w-1/2 rounded-3xl border-2 text-4xl border-white p-4 capitalize hero-position">
                {position}
              </li>
            );
          })
        }
      </ul>

      <!-- Right Sides -->
      <div class="relative flex flex-col w-full justify-between gap-16">
        <h2 class="text-5xl text-[#6750A4]">
          "It's not about ideas, It's about making ideas happen!"
        </h2>
        <div class="flex gap-2 w-full justify-around">
          <div class="min-w-[50px] aspect-square">
            <Picture src="/images/astro.png" alt="astro" />
          </div>
          <div class="min-w-[50px] aspect-square">
            <Picture src="/images/kotlin.png" alt="astro" />
          </div>
          <div class="min-w-[50px] aspect-square">
            <Picture src="/images/java.png" alt="astro" />
          </div>
          <div class="min-w-[50px] aspect-square">
            <Picture src="/images/ts.png" alt="astro" />
          </div>
          <div class="min-w-[50px] aspect-square">
            <Picture src="/images/js.png" alt="astro" />
          </div>
          <div class="min-w-[50px] aspect-square">
            <Picture src="/images/rust.png" alt="astro" />
          </div>
        </div>
      </div>
    </div>
  </Section>

  <!-- Outsourcing Section -->
  <Section sectionTitle="outsourcing">
    <OutSourcing client:load />
  </Section>

  <!-- Software Development Section -->
  <Section sectionTitle="software-development">
    <div class="grid grid-cols-2">
      <div class="flex items-center w-full">
        <div class="h-[60%] mx-8 w-full rounded-t-3xl bg-[#9A82DB] shadow-xl">
        </div>
      </div>
      <Picture
        src="/images/tech-stack.png"
        alt="tech stack"
        layout="constrained"
      />
    </div>
  </Section>

  <!-- About Us Section -->
  <Section sectionTitle="about-us">
    <ul
      class="px-2 relative flex flex-col [&>*]:shadow-xl [&>*:hover]:delay-75 [&>*]:duration-500 [&>*:hover]:scale-105 [&>*:hover]:z-10"
    >
      <li
        class="w-[35vw] rounded-t-[4rem] rounded-b-xl bg-[#c4b8e6] border-2 p-12 group"
      >
        <h4 class="text-4xl pb-2">Priority</h4>
        <p
          class="overflow-hidden max-h-[100px] duration-500 delay-75 w-1/2 group-hover:w-full"
        >
          Lorem ipsum dolor, sit amet consectetur adipisicing elit. Impedit
          voluptatum delectus doloremque nesciunt optio, nobis neque perferendis
          aliquam dignissimos dolores voluptate provident! Facilis alias ad
          dolorem nisi velit dicta eum.
        </p>
      </li>
      <li
        class="w-[35vw] rounded-t-[4rem] rounded-b-xl bg-[#c4b8e6] border-2 p-12 group -mt-44 mx-auto"
      >
        <h4 class="text-4xl pb-2">Priority</h4>
        <p
          class="overflow-hidden max-h-[100px] duration-500 delay-75 w-1/2 group-hover:w-full"
        >
          Lorem ipsum dolor, sit amet consectetur adipisicing elit. Impedit
          voluptatum delectus doloremque nesciunt optio, nobis neque perferendis
          aliquam dignissimos dolores voluptate provident! Facilis alias ad
          dolorem nisi velit dicta eum.
        </p>
      </li>
      <li
        class="w-[35vw] rounded-t-[4rem] rounded-b-xl bg-[#c4b8e6] border-2 p-12 group -mt-44 ml-auto"
      >
        <h4 class="text-4xl pb-2">Priority</h4>
        <p
          class="overflow-hidden max-h-[100px] duration-500 delay-75 w-1/2 group-hover:w-full"
        >
          Lorem ipsum dolor, sit amet consectetur adipisicing elit. Impedit
          voluptatum delectus doloremque nesciunt optio, nobis neque perferendis
          aliquam dignissimos dolores voluptate provident! Facilis alias ad
          dolorem nisi velit dicta eum.
        </p>
      </li>
    </ul>
  </Section>
</Layout>

<!-- Always use is:global to prevent astro using .where() selector. -->
<style is:global>
  html {
    scroll-behavior: smooth;
  }

  .hero-position {
    transform: rotateX(60deg) rotateZ(325deg);
  }
  .hero-position:hover {
    transform: rotateX(0deg) rotateZ(30deg);
    scale: 80%;
    z-index: 1;
  }

  .outsourcing-cards-hide {
    background-color: aqua;
    opacity: 0;
    display: none;
    pointer-events: none;
  }
</style>
