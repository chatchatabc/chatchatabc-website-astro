---
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
import Footer from "../components/Footer.astro";

const positions = [
  "java developer",
  "web developer",
  "backend engineer",
  "designer",
];
---

<Layout title="Welcome to Astro.">
  <!-- Hero Section -->
  <Section>
    <div class="relative grid grid-cols-2">
      <!-- Background -->
      <div class="absolute top-0 left-0 h-full w-full">
        <img src="/images/tailwind.png" class="h-full w-full object-contain" />
      </div>

      <!-- Left Side -->
      <ul
        class="relative flex flex-col-reverse justify-center items-center gap-2"
      >
        {
          positions.map((position) => {
            return (
              <li class="bg-[#6750A4] text-white shadow-2xl flex items-end w-1/2 -rotate-45 rounded-lg border-2 text-2xl border-white p-4 capitalize hero-position">
                {position}
              </li>
            );
          })
        }
      </ul>

      <!-- Right Sides -->
      <div class="relative flex flex-col gap-8 w-full justify-between">
        <div class="flex w-full justify-around">
          <img
            src="/images/astro.png"
            class="min-w-[100px] w-[20%] aspect-square object-cover"
          />
          <img
            src="/images/kotlin.png"
            class="min-w-[100px] w-[20%] aspect-square object-cover"
          />
          <img
            src="/images/java.png"
            class="min-w-[100px] w-[20%] aspect-square object-cover"
          />
        </div>
        <h2 class="text-5xl text-[#6750A4]">
          "It's not about ideas, It's about making ideas happen!"
        </h2>
        <div class="flex w-full justify-around">
          <img
            src="/images/ts.png"
            class="min-w-[100px] w-[20%] aspect-square object-cover"
          />
          <img
            src="/images/js.png"
            class="min-w-[100px] w-[20%] aspect-square object-cover"
          />
          <img
            src="/images/rust.png"
            class="min-w-[100px] w-[20%] aspect-square object-cover"
          />
        </div>
      </div>
    </div>
  </Section>

  <!-- Outsourcing Section -->
  <Section sectionTitle="Outsourcing">
    <ul class="flex gap-8 px-16">
      {
        positions.map((position) => {
          return (
            <li class="max-w-xs text-center flex-1">
              <div class="relative">
                <div class="h-8 w-1 bg-black absolute rounded-full bottom-1/4" />
                <h4 class="text-xl capitalize">{position}</h4>
              </div>
              <div class="mt-2 aspect-[8/10] rounded-xl bg-black" />
            </li>
          );
        })
      }
    </ul>
  </Section>

  <!-- About Us Section -->
  <Section sectionTitle="About Us">
    <ul class="px-2 relative flex flex-col">
      <li
        class="w-[35vw] rounded-t-[4rem] rounded-b-xl bg-[#6750A4] border-2 p-12"
      >
        <h4 class="text-4xl pb-2">Priority</h4>
        <p>
          Lorem ipsum dolor, sit amet consectetur adipisicing elit. Impedit
          voluptatum delectus doloremque nesciunt optio, nobis neque perferendis
          aliquam dignissimos dolores voluptate provident! Facilis alias ad
          dolorem nisi velit dicta eum.
        </p>
      </li>
      <li
        class="w-[35vw] rounded-t-[4rem] rounded-b-xl bg-[#6750A4] border-2 p-12 -mt-44 mx-auto"
      >
        <h4 class="text-4xl pb-2">Priority</h4>
        <p>
          Lorem ipsum dolor, sit amet consectetur adipisicing elit. Impedit
          voluptatum delectus doloremque nesciunt optio, nobis neque perferendis
          aliquam dignissimos dolores voluptate provident! Facilis alias ad
          dolorem nisi velit dicta eum.
        </p>
      </li>
      <li
        class="w-[35vw] rounded-t-[4rem] rounded-b-xl bg-[#6750A4] border-2 p-12 -mt-44 ml-auto"
      >
        <h4 class="text-4xl pb-2">Priority</h4>
        <p>
          Lorem ipsum dolor, sit amet consectetur adipisicing elit. Impedit
          voluptatum delectus doloremque nesciunt optio, nobis neque perferendis
          aliquam dignissimos dolores voluptate provident! Facilis alias ad
          dolorem nisi velit dicta eum.
        </p>
      </li>
    </ul>
  </Section>
</Layout>

<style is:global>
  .hero-position {
    transform: rotateX("45deg");
  }
</style>
