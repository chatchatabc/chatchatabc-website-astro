---
import Footer from "../components/Footer.astro";
import Navbar from "../components/navbar/Navbar.astro";
import i18next from "i18next";
import { HeadHrefLangs } from "astro-i18next/components";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang={i18next.language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Website Icon -->
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/logo/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/logo/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/logo/favicon-16x16.png"
    />
    <link rel="manifest" href="/logo/site.webmanifest" />

    <!-- astro-i18next -->
    <HeadHrefLangs />

    <!-- Additional Info -->
    <meta
      name="description"
      content="ChatChatABC is your go-to web application solution provider. We are dedicated to offering high-quality software development, software platform, and cutting-edge technology services."
    />
    <meta
      name="keywords"
      content="Software development, Software platform, Technology services, Web application solution provider, ChatChatABC, Web Development, Java Developer, Web Designer, Backend Engineer"
    />
    <meta name="author" content="Developer from ChatChatABC" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <Navbar />
    <main class="overflow-x-hidden flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  /* width */
  .scrollbar::-webkit-scrollbar {
    width: 10px;
  }

  /* Track */
  .scrollbar::-webkit-scrollbar-track {
    box-shadow: inset 0 0 5px #e8def8;
    border-radius: 10px;
  }

  /* Handle */
  .scrollbar::-webkit-scrollbar-thumb {
    background: #6750a4;
    border-radius: 10px;
  }

  /* Handle on hover */
  .scrollbar::-webkit-scrollbar-thumb:hover {
    background: #503e80;
  }
</style>
